{
  "title": "Flow Field v1",
  "type": "object",
  "properties": {
    "seed": { "type": "integer", "minimum": 1, "default": 42 },
    "speed": {
      "type": "number",
      "minimum": 0.001,
      "maximum": 0.05,
      "default": 0.012
    },
    "density": {
      "type": "integer",
      "minimum": 5,
      "maximum": 200,
      "default": 80
    },
    "steps": { "type": "integer", "minimum": 5, "maximum": 60, "default": 15 },
    "noiseScale": {
      "type": "number",
      "minimum": 0.001,
      "maximum": 0.05,
      "default": 0.01
    },
    "strokeWeight": {
      "type": "number",
      "minimum": 0.5,
      "maximum": 6,
      "default": 2
    },
    "strokeSaturation": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "default": 75
    },
    "strokeBrightness": {
      "type": "number",
      "minimum": 50,
      "maximum": 100,
      "default": 85
    },
    "strokeAlpha": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "default": 35
    },
    "background": {
      "type": "string",
      "pattern": "^#([0-9a-fA-F]{6})$",
      "default": "#26262b"
    },
    "palette": {
      "type": "array",
      "items": { "type": "string", "pattern": "^#([0-9a-fA-F]{6})$" },
      "minItems": 3,
      "maxItems": 5,
      "default": ["#ff7a7a", "#ffd166", "#70d6ff", "#bdb2ff"]
    }
  },
  "required": [
    "seed",
    "speed",
    "density",
    "steps",
    "noiseScale",
    "strokeWeight",
    "strokeSaturation",
    "strokeBrightness",
    "strokeAlpha",
    "background",
    "palette"
  ]
}
